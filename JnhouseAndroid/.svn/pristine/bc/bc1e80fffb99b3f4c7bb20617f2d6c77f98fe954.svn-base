<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/question_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/borough_detail_vp_ad"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_font_color_highlight">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="小区信息"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_font_color_highlight"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="小区名称:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/borough_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="绿地"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="物业费:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_costs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0.6元/平米/月"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_font_color_highlight"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="建筑年代:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/nulls"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="绿化率:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lvhua"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_font_color_highlight"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="@dimen/consult_lr_distant"
                android:visibility="visible">


                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="物业公司:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_company"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="开发商:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_business"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="绿地集团"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />、

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_font_color_highlight"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="@dimen/consult_lr_distant"
                android:visibility="visible">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="小区地址:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/app_font_color_highlight"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingTop="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小区描述"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/borough_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="小区描述"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/app_font_color_highlight"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:padding="3dp"
                    android:src="@drawable/chankanjilu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.3"
                    android:text="周边配套"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey"></View>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="小学:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_prmary_school"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="中学:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_high_school"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="商场:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_market"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="医院:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="银行:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="交通:"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/borough_traffic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="暂无资料"
                    android:textColor="@color/app_font_color_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
