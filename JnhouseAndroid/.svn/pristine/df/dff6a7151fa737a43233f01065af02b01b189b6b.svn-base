<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/second_house_item_thumb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/second_house_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="满五年唯一住宅"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_house_item_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="2室3厅 128m²  南北"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/second_house_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="335 万"
                android:textSize="18sp"
                android:textColor="@color/tp_index_second_house_title"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_house_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天露园一区"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/second_house_item_jj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="25150元/m²"
                android:textSize="15sp" />
        </RelativeLayout>

        <jnhouse.topwellsoft.com.jnhouse_android.view.FluidLayout
            android:id="@+id/fluid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        </jnhouse.topwellsoft.com.jnhouse_android.view.FluidLayout>

    </LinearLayout>

</LinearLayout>
