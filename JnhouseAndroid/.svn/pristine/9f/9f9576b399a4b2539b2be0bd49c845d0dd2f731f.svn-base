<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_font_color_highlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买房助手"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/app_font_color_black"
           android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/relative_ask"
            android:layout_width="0.0dip"
            android:layout_height="60.0dip"
            android:layout_weight="1.0"
            android:paddingBottom="6.0dip"
            android:paddingTop="6.0dip"
            android:tag="tab_0" >

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/wenda" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="问答"
                android:textSize="14.0sp"
                android:textColor="@color/app_font_color_black"/>
        </RelativeLayout>
        
        <View
            android:layout_width="1dip"
            android:layout_height="45dp"
            android:background="#EAEAEA"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:id="@+id/relative_baike"
            android:layout_width="0.0dip"
            android:layout_height="60.0dip"
            android:layout_weight="1.0"
            android:tag="tab_1" >

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6.0dip"
                android:background="@drawable/baike"
                android:paddingBottom="6.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="6.0dip"
                android:paddingTop="6.0dip"
                android:singleLine="true"
                android:text="百科"
                android:textSize="14.0sp"
                android:textColor="@color/app_font_color_black"/>

        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="45dp"
            android:background="#EAEAEA"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:id="@+id/relative_agent"
            android:layout_width="0.0dip"
            android:layout_height="60.0dip"
            android:layout_weight="1.0"
            android:paddingBottom="6.0dip"
            android:paddingTop="6.0dip"
            android:tag="tab_2" >

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/agent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="经纪人"
                android:textSize="14.0sp"
                android:textColor="@color/app_font_color_black"/>
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="45dp"
            android:background="#EAEAEA"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:id="@+id/relative_counter"
            android:layout_width="0.0dip"
            android:layout_height="60.0dip"
            android:layout_weight="1.0"
            android:paddingBottom="6.0dip"
            android:paddingTop="6.0dip"
            android:tag="tab_3" >

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/calculator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="计算器"
                android:textSize="14.0sp"
                android:textColor="@color/app_font_color_black"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableRight="@drawable/index_zx_more"
        android:text="房价-二手房价市场行情"
        android:textColor="@color/app_font_color_black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@color/app_font_color_highlight"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/linear_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全市均价"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/index_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45803"
                    android:textSize="35sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/app_main_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/平"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="#EAEAEA"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/linear_strike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日成交量"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/index_strike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45803"
                android:textSize="35sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/accent_material_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>