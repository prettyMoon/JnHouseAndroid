                </RelativeLayout>
            </LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@color/background_white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/app_font_color_black"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配套设施:"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/bed"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="家具"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/television"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="空调"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/net"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="热水器"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/heater"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="电视机"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/btn5"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="床铺"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/fridge"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="沙发"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/air_conditioner"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="冰箱"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/heating"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="宽带"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/washer"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="洗衣机"/>
                        <Button
                            android:textSize="15sp"
                            android:layout_margin="3dp"
                            android:background="@color/app_font_color_grey"
                            android:layout_weight="1"
                            android:id="@+id/btn10"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:text="厨具"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题:"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>
                <EditText
                    android:hint="6-30个字"
                    android:id="@+id/rent_title_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_grey"
                    android:background="@color/background_white"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房源描述:"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black" />

                <Button
                    android:id="@+id/rent_description_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/right_community"
                    android:hint="周边环境，交通状况等"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人:"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black" />

                <EditText
                    android:id="@+id/rent_contacts_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_grey"
                    android:background="@color/background_white"
                    android:textSize="15sp"/>

                <RadioGroup
                    android:layout_marginRight="10dp"
                    android:id="@+id/sex_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/contacts_man_rb"
                        android:text="先生"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/contacts_woman_rb"
                        android:text="女士"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:background="@color/background_white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式:"
                    android:textColor="@color/app_font_color_black" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_grey"
                    android:id="@+id/rent_phone_et"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:background="@color/background_white"
                    android:inputType="phone"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <CheckBox
                    android:background="@color/background_white"
                    android:id="@+id/rent_choose_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择经纪人(选择指定经纪人或不指定)"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:id="@+id/rent_checkbox_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/ic_launcher"
                    android:id="@+id/rent_agent_one_ib"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_launcher"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rent_agent_two_ib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/ic_launcher"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/rent_agent_three_ib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <Button
                android:id="@+id/rent_release_bt"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/app_main_color"
                android:text="发布"
                android:textSize="15sp"
                android:textColor="@color/background_white"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
