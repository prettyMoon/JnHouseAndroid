                        android:text="第"/>
                    <EditText
                        android:textColor="@color/app_font_color_grey"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/rent_floor_et"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
