<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/tp_new_house_title"/>
        <TextView
            android:id="@+id/rent_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:textColor="@color/app_font_color_highlight"
            android:textSize="17sp"/>
        <Button
            android:id="@+id/rent_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Click"
            android:textSize="17sp"
            android:background="@android:color/transparent"
            android:textColor="@color/app_font_color_highlight"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望小区："
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>
                <Button
                    android:id="@+id/rent_choosecommunity_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/right_community"
                    android:hint="请选择小区"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域："
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cityarea_id_tv"
                        android:textSize="15sp"
                        android:text="城区"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <!--<TextView
                        android:id="@+id/cityarea2_id_tv"
                        android:textSize="15sp"
                        android:text="商圈"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望租金："
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>
                <Spinner
                    android:entries="@array/rent_money"
                    android:id="@+id/rent_money_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/background_white"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_font_color_black"
                    android:layout_marginLeft="10dp"
                    android:text="求租类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:entries="@array/rent_want_type"
                    android:id="@+id/rent_want_type_spinner"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/rent_room_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房屋户型:"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/app_font_color_black"/>
                <Spinner
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rent_room_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/room"/>
                <TextView
                    android:text="室"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rent_office_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/office"/>
                <TextView
                    android:text="厅"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<Spinner
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rent_kitchen_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/kitchen"/>-->
                <Spinner
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rent_toilet_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/toilet"/>
                <TextView
                    android:text="卫"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_font_color_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/background_white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建筑面积"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_font_color_black"/>
                <EditText
                    android:textColor="@color/app_font_color_grey"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rent_measure_et"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background_white"
                    android:inputType="number"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平米"
                    android:layout_marginRight="10dp" />
