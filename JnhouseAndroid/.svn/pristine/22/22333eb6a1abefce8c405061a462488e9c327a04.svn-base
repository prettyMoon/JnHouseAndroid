<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <include layout="@layout/tp_index_second_house_title"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_white"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="@color/app_font_color_black"
            android:textSize="15sp"/>
        <RatingBar
            android:isIndicator="false"
            android:id="@+id/rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:numStars="5"
            android:stepSize="1"
            android:max="5"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地段"
            android:textColor="@color/app_font_color_black"
            android:textSize="15sp"/>
        <RatingBar
            android:isIndicator="false"
            android:id="@+id/rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:numStars="5"
            android:stepSize="1"
            android:max="5"
          />
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配套"
            android:textColor="@color/app_font_color_black"
            android:textSize="15sp"/>
        <RatingBar
            android:isIndicator="false"
            android:id="@+id/rating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:numStars="5"
            android:stepSize="1"
            android:max="5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交通"
            android:textColor="@color/app_font_color_black"
            android:textSize="15sp"/>
        <RatingBar
            android:isIndicator="false"
            android:id="@+id/rating4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:numStars="5"
            android:stepSize="1"
            android:max="5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="环境"
            android:textColor="@color/app_font_color_black"
            android:textSize="15sp"/>
        <RatingBar
            android:isIndicator="false"
            android:id="@+id/rating5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:numStars="5"
            android:stepSize="1"
            android:max="5"
            />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/background_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评"
            android:textSize="15sp"
            android:textColor="@color/app_font_color_black"/>
        <TextView
            android:id="@+id/borough_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鲁能"
            android:textSize="15sp"
            android:textColor="@color/app_font_color_black"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/background_white">
<EditText
    android:id="@+id/remarks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:hint="楼盘的位置如何，环境怎么样，配套规划满意吗？"/>
    </LinearLayout>
 <Button
     android:id="@+id/eveluatebtn"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_marginLeft="30dp"
     android:layout_marginRight="30dp"
     android:layout_marginTop="50dp"
     android:background="@drawable/btn_background"
     android:text="提交评价"
     android:textColor="@color/background_white"
     android:textSize="17sp"
   />
</LinearLayout>