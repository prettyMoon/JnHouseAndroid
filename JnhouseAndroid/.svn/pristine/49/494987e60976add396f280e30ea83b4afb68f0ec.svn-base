<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jnhouse.topwellsoft.com.jnhouse_android.ui.mine.MineBuy">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:background="@color/app_main_color"
                    android:gravity="center">
                    <TextView
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的求购"
                        android:textColor="@color/app_font_color_highlight"/>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/mine_buy_back_iv"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_titlebar_back"/>
            </FrameLayout>
            <TextView
                android:id="@+id/mine_buy_edit_tv"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/app_font_color_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>
        <ListView
            android:id="@+id/mine_buy_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/mine_buy_delete_btn"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:text="删除"
        android:textColor="@color/app_font_color_highlight"
        android:background="@color/app_main_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
