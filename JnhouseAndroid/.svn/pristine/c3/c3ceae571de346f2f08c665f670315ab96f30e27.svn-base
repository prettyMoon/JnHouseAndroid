<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/app_main_color">

        <ImageView

            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_background"
            android:gravity="center_vertical"
            android:onClick="Click"
            android:src="@drawable/icon_titlebar_back" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="装修"
            android:textColor="@color/app_font_color_highlight"
            android:textSize="20sp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/u8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_font_color_highlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="您的称呼:"
            android:textColor="@color/app_font_color_black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/app_font_color_highlight"
            android:textColor="@color/app_font_color_grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey" />

    <LinearLayout
        android:id="@+id/choosecommunity_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_font_color_highlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/borough_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="所在小区:"
            android:textColor="@color/app_font_color_black"
            android:textSize="17sp" />

        <TextView
            android:textSize="17sp"
            android:drawableRight="@drawable/yjt"
            android:editable="false"
            android:id="@+id/borough_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/app_font_color_highlight"
            android:textColor="@color/app_font_color_grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_font_color_highlight"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="房屋户型:"
                android:textColor="@color/app_font_color_black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/house_room_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="一居室"
                android:textColor="@color/app_font_color_grey"
                android:textSize="17sp" />
        </LinearLayout>
        <!--<ImageButton
            android:id="@+id/house_room_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
           android:background="@drawable/right"
           android:layout_marginRight="10dp"
            android:onClick="Click"/>-->
        <ImageButton
            android:id="@+id/house_room_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/yjt"
            android:onClick="Click" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_font_color_highlight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="手机号码:"
            android:textColor="@color/app_font_color_black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/app_font_color_highlight"
            android:textColor="@color/app_font_color_grey" />
    </LinearLayout>

    <Button
        android:id="@+id/application_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_background"
        android:onClick="Click"
        android:text="立即申请"
        android:textColor="@color/app_font_color_highlight"
        android:textSize="15sp" />

</LinearLayout>