<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/app_font_color_highlight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/my_release__thumb_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/app_font_color_black"
            android:textSize="20sp"
            android:singleLine="true"
            android:text="小户型 好楼层 价格合适 有钥匙看房方便"
            android:id="@+id/my_release__title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/app_font_color_black"
                android:text="2室2厅"
                android:id="@+id/my_release_room_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/app_font_color_black"
                android:text="84㎡"
                android:id="@+id/my_release__area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/app_font_color_black"
                android:text="南北"
                android:id="@+id/my_release__toward_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:textColor="@color/app_main_color"
                    android:text="72万"
                    android:id="@+id/my_release__price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <TextView
                android:textSize="15sp"
                android:text="万科新里程"
                android:id="@+id/my_release__borough_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/my_release_state_btn"
                android:layout_alignParentRight="true"
                android:background="@color/app_font_color_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出售中"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>