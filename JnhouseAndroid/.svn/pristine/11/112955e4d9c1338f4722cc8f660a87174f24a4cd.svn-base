<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/tp_index_second_house_title"/>
    <EditText
        android:id="@+id/index_second_house_title_search"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/title_search"
        android:layout_centerVertical="true"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="64dp"
        android:textColor="@color/app_font_color_black"
        android:textColorHint="@color/app_font_color_grey"
        android:cursorVisible="false"
        android:paddingLeft="3dp"
        android:visibility="gone"
        android:hint="输入小区名"
        android:imeOptions="actionSearch"/>

    <TextView
        android:id="@+id/index_second_house_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAA"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textColor="@color/app_font_color_highlight"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/app_font_color_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password_phone"
                android:layout_width="248dp"
                android:layout_height="44dp"
                android:background="@color/app_font_color_highlight"
                android:hint="请输入手机号"
                android:maxLength="11" />

            <Button
                android:id="@+id/password_getCode"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/app_main_color"
                android:text="@string/verify_code"
                android:textColor="@color/app_font_color_highlight"
                android:textSize="17sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/get_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:background="@color/app_font_color_highlight"
            android:hint="请输入验证码"
            android:maxLength="20" />

        <EditText
            android:id="@+id/get_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:background="@color/app_font_color_highlight"
            android:hint="请输入密码"
            android:maxLength="20"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/getpassword"
            android:layout_width="320dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/app_main_color"
            android:onClick="verification"
            android:text="重置密码"
            android:textColor="@color/app_font_color_highlight"
            android:textSize="17dp" />

    </LinearLayout>

</LinearLayout>
