<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/app_main_color">
        <ImageView
            android:id="@+id/top_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/icon_titlebar_back"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/background_white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_titlebar_back" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="名  称"
            android:textSize="20sp"
            android:background="@color/background_white"/>
        <EditText
            android:id="@+id/name_et"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区  域"
            android:textSize="20sp"
            android:background="@color/background_white"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"/>
        <EditText
            android:id="@+id/area_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="售  价"
            android:textSize="20sp"
            android:background="@color/background_white"/>
        <EditText
            android:id="@+id/pic_et"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万元"
            android:textSize="20sp"
            android:background="@color/background_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建筑面积"
            android:textSize="20sp"
            android:background="@color/background_white"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/measure_et"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平米"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要  求"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/requite_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="户  型"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:text="1室"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:text="1厅"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:text="1厨"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:text="1卫"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="特别需求"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/especially_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="17sp"
            android:hint="在这里开始写"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fabu_layout"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:background="@color/app_main_color"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="25sp"
            android:textColor="@color/background_white"
            />
    </LinearLayout>

</LinearLayout>