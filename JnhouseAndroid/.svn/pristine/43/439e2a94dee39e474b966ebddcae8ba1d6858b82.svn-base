apply plugin: 'com.android.application'
android {
    compileSdkVersion 22
    buildToolsVersion '24.0.1'

    defaultConfig {
        applicationId "jnhouse.topwellsoft.com.jnhouse_android"
        minSdkVersion 16
        targetSdkVersion 22
        versionCode 1
        versionName "1.0"
    }
    sourceSets {
        main {
            jniLibs.srcDirs = ['libs']
        }
    }
    buildTypes {
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }
}
dependencies {
    compile project(':TPAndroidUtils.androidtools')
    compile project(':TPAndroidUtils.baidumap')
    compile fileTree(dir: 'libs', include: ['*.jar'])
    //compile fileTree(dir: '../../TPAndroidUtils/androidtools/libs', include: ['*.jar'])
    compile 'com.android.support:appcompat-v7:22.2.0'
    compile 'com.jakewharton:butterknife:7.0.1'
    compile 'com.github.bumptech.glide:glide:3.7.0'


    compile 'com.android.support:design:22.2.0'
    compile 'com.android.support:recyclerview-v7:22.2.0'

}
