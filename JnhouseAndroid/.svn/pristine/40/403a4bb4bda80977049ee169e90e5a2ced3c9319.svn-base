<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款方式"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等额本息"
                        android:textSize="17sp"
                        android:textColor="@color/orange" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等额本金"
                        android:textSize="17sp"
                        android:textColor="@color/orange"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房价总额"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"

                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColorHint="@color/orange"
                    android:textColor="@color/orange"
                    android:background="@null"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:maxLength="10"
                    android:layout_weight="0.3"
                    android:id="@+id/fangjia"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首付比例"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="3"
                    android:textColorHint="@color/orange"
                    android:gravity="right"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.30"
                    android:textColor="@color/orange"
                    android:maxLength="2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款总额"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColorHint="@color/orange"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/orange"
                    android:maxLength="10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款年限"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColorHint="@color/orange"
                    android:textColor="@color/orange"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款利率"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColorHint="@color/orange"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/orange"
                    android:background="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <Button
                    android:layout_width="320dp"
                    android:layout_height="44dp"
                    android:background="@color/orange"
                    android:text="开始计算"
                    android:textSize="17sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/background_white"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款总额"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="17sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款月数"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="17sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付利息"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="17sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:background="@color/background_white"
                android:weightSum="1"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月均还款"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="17sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="17sp"
                    android:textColor="@color/app_font_color_black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>