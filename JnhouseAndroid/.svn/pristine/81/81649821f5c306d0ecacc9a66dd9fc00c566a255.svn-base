<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/tp_index_second_house_title"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_img_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/back" />

        <EditText
            android:id="@+id/edit_middle"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_background"
            android:focusable="true"
            android:hint="输入关键词"
            android:paddingLeft="15dp"
            android:textColorHint="@color/font_black_5"
            android:textSize="@dimen/consult_ts_middle" />

        <TextView
            android:id="@+id/search_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/red_btn_state"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="搜索"
            android:textColor="@color/font"
            android:textSize="@dimen/consult_ts_large" />

    </RelativeLayout>

    <jnhouse.topwellsoft.com.jnhouse_android.view.SmoothListView.SmoothListView
        android:id="@+id/smoothlistview_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#ffffff"
        android:listSelector="@drawable/white_btn_state" />
</LinearLayout>