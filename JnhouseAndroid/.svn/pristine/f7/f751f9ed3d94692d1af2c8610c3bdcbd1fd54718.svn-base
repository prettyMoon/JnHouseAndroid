<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/new_house_item_thumb"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@color/app_font_color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_house_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="满五年唯一住宅"
            android:textColor="@color/app_font_color_black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_house_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="领秀城贵和购物中心南行2000米..."
                android:textSize="12sp"
                android:textColor="@color/app_font_color_black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_house_item_totalarea"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="128m²-150m²"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/new_house_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="7550元/m²"
                android:textSize="12sp"
                android:textColor="@color/app_main_color"/>
        </RelativeLayout>

        <jnhouse.topwellsoft.com.jnhouse_android.view.FluidLayout
            android:id="@+id/newhouse_fluid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </jnhouse.topwellsoft.com.jnhouse_android.view.FluidLayout>

    </LinearLayout>

</LinearLayout>
