<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/tp_new_house_title"/>
        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装修"
            android:layout_gravity="center"
            android:textColor="@color/app_font_color_highlight"
            android:textSize="20sp"
            android:textIsSelectable="true" />
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Click"
            android:textSize="17sp"
            android:background="@android:color/transparent"
            android:textColor="@color/app_font_color_highlight"/>
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/u8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/app_font_color_highlight">
        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的称呼:"
            android:textColor="@color/app_font_color_black"
            android:textSize="17sp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/app_font_color_grey"
            android:background="@color/app_font_color_highlight"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/app_font_color_highlight">
        <TextView
            android:id="@+id/borough_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在小区:"
            android:textColor="@color/app_font_color_black"
            android:textSize="17sp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/borough_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/app_font_color_grey"
            android:background="@color/app_font_color_highlight"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/app_font_color_highlight">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋户型:"
                android:textColor="@color/app_font_color_black"
                android:textSize="17sp"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/house_room_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="一居室"
                android:textColor="@color/app_font_color_grey"
                android:textSize="17sp"/>
        </LinearLayout>
        <!--<ImageButton
            android:id="@+id/house_room_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
           android:background="@drawable/right"
           android:layout_marginRight="10dp"
            android:onClick="Click"/>-->
        <ImageButton
            android:id="@+id/house_room_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yjt"
            android:layout_marginRight="10dp"
            android:onClick="Click"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/app_font_color_highlight">
        <TextView
            android:id="@+id/phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码:"
            android:textColor="@color/app_font_color_black"
            android:textSize="17sp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/app_font_color_grey"
            android:background="@color/app_font_color_highlight"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/application_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_main_color"
        android:layout_margin="20dp"
        android:text="立即申请"
        android:onClick="Click"
        android:textColor="@color/app_font_color_highlight"
        android:textSize="17sp"/>

</LinearLayout>