<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/app_main_color">

    <ImageView
        android:id="@+id/index_second_house_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn_background"
        android:gravity="center_vertical"
        android:src="@drawable/icon_titlebar_back" />

    <EditText
        android:id="@+id/index_second_house_title_search"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="64dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/edit_background"
        android:hint="输入小区名或商圈名"
        android:imeOptions="actionSearch"
        android:textColor="@color/app_font_color_black"
        android:textColorHint="@color/app_font_color_grey"
        android:textSize="15sp"
        android:visibility="gone"

        android:paddingLeft="10dp" />
    <TextView
        android:id="@+id/search_maintab_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="搜索"
        android:textColor="@color/app_font_color_highlight"
        android:textSize="17sp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/index_second_house_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/background_white"
        android:visibility="gone"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/index_second_house_guanzhu"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="17sp"
        android:background="@drawable/guanzhu"
        android:textColor="@color/background_white"
        android:layout_marginRight="40dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/index_second_house_fenxiang"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="17sp"
        android:background="@drawable/fenxiang"
        android:textColor="@color/background_white"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        />

</RelativeLayout>
