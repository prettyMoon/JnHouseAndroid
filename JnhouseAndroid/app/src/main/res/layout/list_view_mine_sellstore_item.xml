<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mine_sell_thumb_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp"
                    android:text="id"
                    android:id="@+id/mine_sell_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_font_color_black"
                    android:textSize="15sp"
                    android:text="状态"
                    android:id="@+id/mine_sell_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:textColor="@color/app_font_color_black"
                android:textSize="20sp"
                android:singleLine="true"
                android:text="委托标题"
                android:id="@+id/mine_sell_store_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/app_font_color_black"
                    android:text="商铺类型"
                    android:id="@+id/mine_sell_store_style_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toLeftOf="@+id/mine_sell_store_area_unit_tv"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/app_font_color_black"
                    android:text="面积"
                    android:id="@+id/mine_sell_store_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/app_font_color_black"
                    android:text="㎡"
                    android:id="@+id/mine_sell_store_area_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:text="小区名称"
                    android:id="@+id/mine_sell_borough_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:textSize="18sp"
                        android:textColor="@color/app_main_color"
                        android:text="万元"
                        android:id="@+id/mine_sell_store_unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toLeftOf="@+id/mine_sell_store_unit_tv"
                        android:textSize="18sp"
                        android:textColor="@color/app_main_color"
                        android:text="价格"
                        android:id="@+id/mine_sell_store_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_del"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/sellstorelist_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>