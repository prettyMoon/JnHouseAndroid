<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/rent_house_item_thumb"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@color/app_font_color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rent_house_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="满五年唯一住宅"
            android:textColor="@color/app_font_color_black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rent_house_item_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="2室3厅 128m²  南北"
                android:textSize="12sp"
                android:textColor="@color/app_font_color_black"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/rent_house_item_borough_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天路一区"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rent_house_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="7550元/月"
                android:textSize="15sp"
                android:textColor="@color/app_main_color"/>
        </LinearLayout>

        <jnhouse.topwellsoft.com.jnhouse_android.view.FluidLayout
            android:id="@+id/rent_house_fluid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
        </jnhouse.topwellsoft.com.jnhouse_android.view.FluidLayout>

    </LinearLayout>

</LinearLayout>
